<%= form_for @article do |f| %>
<%= f.label :name, "Name" %><br/>
<%= f.text_field :name, class: "form-control", placeholder: "Name" %> <br/>

<%= f.label :description, "Description" %><br/>
<%= f.text_area :description, class: "form-control", placeholder: "Description" %>

<%= f.submit "Submit" %>
<% end %>